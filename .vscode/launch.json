    "version": "0.2.0",
    "compounds": [
        {
            "name": "Launch All",
            "configurations": ["API", "Frontend"]
        }
    ],
    "configurations": [
        {
            "name": "Frontend",
            "program": "${workspaceFolder}/frontend",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "cwd": "${workspaceFolder}/frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
        },
        {
            "name": "API",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload"
            ],
            "jinja": true,
            "cwd": "${workspaceFolder}/backend",
        }
    ],
}